{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"typeCheck": true,
		"deleteOutDir": true,
		"builder": {
			"type": "swc",
			"options": {
				"swcrcPath": ".swcrc",
				"stripLeadingPaths": true
			}
		}
	}
}
